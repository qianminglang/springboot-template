<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clear.mapper.SysLogMapper">

    <sql id="fields">
        userid,
        username,
        chinesename,
        userpwd,
        activestate,
        auditstate,
        smsstate,
        emailstate,
        sex,
        telephone,
        phone,
        email,
        description,
        createtime,
        createpreson,
        lastmodifytime,
        lastmodifypreson,
        groupid,
        department_id,
        province,
        roleid,
        city
    </sql>


    <select id="selectUserInfo"
            parameterType="com.clear.entity.SysUser"
            resultType="com.clear.entity.SysUser">
        SELECT
        <include refid="fields"></include>
        FROM sys_user
        <where>
            <if test="item.username!=null and item.username!=''">
                username = #{item.username}
            </if>
        </where>
    </select>

    <select id="selectUserInfoByPage"
            parameterType="com.clear.param.input.UserInfoParam"
            resultType="com.clear.entity.SysUser">
        SELECT
        <include refid="fields"></include>
        FROM userInfo
        <where>
            <if test="item.username!=null and item.username!=''">
                username = #{item.username}
            </if>
            <if test="item.password!=null and item.password!=''">
                AND password = #{item.password}
            </if>
        </where>
    </select>

    <select id="selectUserInfoUserIds"
            resultType="com.clear.entity.SysUser">
        SELECT
        <include refid="fields"></include>
        FROM sys_user
        <where>
            userid in
            <foreach collection="items" item="item" index="index" open="(" separator="," close=")">
                #{item}
            </foreach>
        </where>
    </select>
</mapper>